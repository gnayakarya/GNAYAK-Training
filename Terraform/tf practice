# Configure multiple providers and run terraform init
terraform {
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 3.0.2"
    }
        aws = {
      source = "hashicorp/aws"
      version = "4.52.0"
    }
        digitalocean = {
      source = "digitalocean/digitalocean"
      version = "2.25.2"
    }
  }
}

provider "azurerm" {
  features {}
}

provider "aws" {
  # Configuration options
}

provider "digitalocean" {
  # Configuration options
}
